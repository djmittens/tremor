{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<main class="content" role="main">
    <div class="parallax" style="
            height: 600px;
            background-image: url({{asset "images/parallax-top.png"}}),
            url({{asset "images/parallax-mid.png"}}),
            url({{asset "images/parallax-bottom.jpg"}});
            background-repeat: no-repeat;
            background-size: 100%;">
        <img src="{{@blog.logo}}" height="200px"/>

        <h1>{{@blog.title}}
            <small>
                <blockquote><p>Such Blog, So Amaze, Wow</p>
                    <small>Sir Doge</small>
                </blockquote>
            </small>
        </h1>
    </div>
    <div class="col-md-12 posts">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}

            <article class="{{post_class}} col-md-3">
                <header class="post-header">
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    <span class="post-meta">
                        <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                    </span>
                </header>
                <section class="post-excerpt">
                    <blockquote>
                        <p>{{excerpt}}&hellip;</p>
                        <small>{{author.name}}</small>
                    </blockquote>
                </section>
                <section>
                    {{#foreach tags}}
                        <span class="tag btn btn-default glyphicon glyphicon-tag">
                            {{name}}
                        </span>
                    {{/foreach}}
                </section>
            </article>

        {{/foreach}}
        {{!! After all the posts, we have the previous/next pagination links }}
        <div class="pagination col-md-12">{{pagination}}</div>
    </div>


</main>