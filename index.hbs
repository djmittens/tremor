{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<main class="content" role="main">
    <!--<div class="jumbotron" style="background-image: url('{{@blog.cover}}'); background-size: 100%;">-->
    <div class="jumbotron">
        <img src = "{{@blog.logo}}" height="200px"/>
        <h1 class="blog-title">{{@blog.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
        <small>
            <span class="btn btn-default" >GitHub</span>
            <span class="btn btn-default" >LinkedIn</span>
            <span class="btn btn-default" >Bitbucket</span>
        </small>
    </div>
    <div class="col-md-12 posts">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}

            <article class="{{post_class}} col-md-3">
                <header class="post-header">
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                    <span class="post-meta"><time
                            datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> </span>
                </header>
                <section class="post-excerpt">
                    <blockquote>
                        <p>{{excerpt}}&hellip;</p>
                        <small>{{author.name}}</small>
                    </blockquote>
                </section>
                <section>
                    {{#foreach tags}}
                    <span class="tag btn btn-default glyphicon glyphicon-tag">
                        {{name}}
                    </span>
                    {{/foreach}}
                </section>
            </article>

        {{/foreach}}
        {{!! After all the posts, we have the previous/next pagination links }}
        <div class="pagination col-md-12">{{pagination}}</div>
    </div>


</main>